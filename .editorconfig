# editorconfig.org
root = true

[**]
# Unix-style newlines with a newline ending every file
end_of_line = lf
insert_final_newline = true

trim_trailing_whitespace = true

charset = utf-8

# use tab as indent style
indent_style = tab

[*.md]
trim_trailing_whitespace = false

[{package.json,*.babelrc,.eslintrc,.esdocrc}]
indent_style = space
indent_size = 2
